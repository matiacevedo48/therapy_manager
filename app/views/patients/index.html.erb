<p id="notice"><%= notice %></p>

<h1>Patients</h1>

<table class="table1">
  <thead>
    <tr>
      <th>Name</th>
      <th>Last name</th>
      <th>Rut</th>
      <th>Phone number</th>
      <th>Email</th>
      <th>Birthdate</th>
      <th>Job</th>
      <th>Civil state</th>
      <th>Family info</th>
      <th>Illness</th>
      <th>Allergies</th>
      <th>Surgery</th>
      <th>Hobbies</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @patients.each do |patient| %>
      <tr>
        <td><%= patient.name %></td>
        <td><%= patient.last_name %></td>
        <td><%= patient.rut %></td>
        <td><%= patient.phone_number %></td>
        <td><%= patient.email %></td>
        <td><%= patient.birthdate %></td>
        <td><%= patient.job %></td>
        <td><%= patient.civil_state %></td>
        <td><%= patient.family_info %></td>
        <td><%= patient.illness %></td>
        <td><%= patient.allergies %></td>
        <td><%= patient.surgery %></td>
        <td><%= patient.hobbies %></td>
        <td><%= link_to 'Show', patient %></td>
        <td><%= link_to 'Edit', edit_patient_path(patient) %></td>
        <td><%= link_to 'Destroy', patient, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

