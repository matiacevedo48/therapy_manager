<%= form_with(model: patient, local: true) do |form| %>
  <% if patient.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(patient.errors.count, "error") %> prohibited this patient from being saved:</h2>

      <ul>
        <% patient.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name, "Nombre" %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :last_name, "Apellido" %>
    <%= form.text_field :last_name %>
  </div>

  <div class="field">
    <%= form.label :rut %>
    <%= form.text_field :rut %>
  </div>

  <div class="field">
    <%= form.label :phone_number, "Numero de telefono" %>
    <%= form.text_field :phone_number %>
  </div>

  <div class="field">
    <%= form.label :email, "Direccion E-mail" %>
    <%= form.text_field :email %>
  </div>

  <div class="field">
    <%= form.label :birthdate, "Fecha de Nacimiento"%>
    <%= form.date_select :birthdate, {start_year:1919} %>
  </div>

  <div class="field">
    <%= form.label :job, "Ocupacion" %>
    <%= form.text_field :job %>
  </div>

  <div class="field">
    <%= form.label :civil_state, "Estado Civil" %>
    <%= form.text_field :civil_state %>
  </div>

  <div class="field">
    <%= form.label :family_info, "Antecedentes familiares" %>
    <%= form.text_area :family_info %>
  </div>

  <div class="field">
    <%= form.label :illness, "Enfermedades previas" %>
    <%= form.text_field :illness %>
  </div>

  <div class="field">
