<%= form.label :surgery, "Operaciones" %>
    <%= form.text_field :surgery %>
</div>
</div>

  

  <div class="field col-sm-7">
    <%= form.label :hobbies, "Hobbies" %>
    <%= form.text_area :hobbies %>
  </div>

  <div class="actions">
