<p id="notice"><%= notice %></p>
<div class="centered">
  <h1>Attentions</h1>
  <table class="table">
    <thead>
      <tr>
        <th>Patient</th>
        <th>User</th>
        <th>Therapy</th>
        <th>Treatment</th>
        <th>Date</th>
        <th>Time</th>
        <th>Symptom</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @attentions.each do |attention| %>
        <tr>
          <td><%= attention.patient_id %></td>
          <td><%= attention.user_id %></td>
          <td><%= attention.therapy %></td>
          <td><%= attention.treatment %></td>
          <td><%= attention.date %></td>
          <td><%= attention.time %></td>
          <td><%= attention.symptom %></td>
          <td><%= link_to 'Show', attention, class: "btn btn-light btn-sm ml-2" %></td>
          <td><%= link_to 'Edit', edit_attention_path(attention), class: "btn btn-light btn-sm ml-2" %></td>
          <td><%= link_to 'Destroy', attention, class: "btn btn-light btn-sm ml-2", method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Attention', new_attention_path, class: "btn btn-light btn-sm ml-2" %>
</div>
