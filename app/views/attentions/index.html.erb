<p id="notice"><%= notice %></p>

<h2 class="table1 mb-3">Atenciones</h2>

  <form class="form-inline table1 mb-4">
    <input class="form-control mr-sm-2" type="search" placeholder "Buscar por Rut" aria-label="Search" name="rut">
    <button class="btn btn-info" type="submit">Buscar</button>
  </form>

<div class = "table-responsive" id="margen-abajo1">
  <table class=" table table1">
    <thead>
      <tr>
        <th>Rut</th>
        <th>Paciente</th>
        <th>Terapeuta</th>
        <th>Especialidad</th>
        <th>Tratamiento</th>
        <th>Fecha</th>
        <th>Hora</th>
        <th>Sintomas</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% current_user.attentions.each do |attention| %>
        <tr>
          
          <td><%= attention.patient.rut %></td>
          <td><%= attention.patient.name + " #{attention.patient.last_name}" %></td>
          <td><%= attention.user.username %></td>
          <td><%= attention.specialty.name %></td>
          <td><%= attention.treatment %></td>
          <td><%= attention.date %></td>
          <td><%= attention.time %></td>
          <td><%= attention.symptom %></td>
          
          <td><%= link_to 'Editar', edit_attention_path(attention), class: "btn btn-light btn-sm ml-2" %></td>
          <td><%= link_to 'Borrar', attention, class: "btn btn-light btn-sm ml-2", method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <td><%= link_to 'Nueva Atencion', new_attention_path(patient_id: attention.patient.id), class: "btn btn-light btn-sm ml-2" %></td>
          </tr>
      <% end %>
    </tbody>
    
  </table>
</div>
