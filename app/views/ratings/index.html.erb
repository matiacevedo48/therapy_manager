<p id="notice"><%= notice %></p>
<div class="centered">
  <h1>Ratings</h1>
  <table class="table">
    <thead>
      <tr>
        <th>User</th>
        <th>Rating</th>
        <th>Commentarios</th>
        
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @ratings.each do |rating| %>
        <tr>
          <td><%= rating.user_id %></td>
          <td><%= rating.rating %></td>
          <td><%= rating.comments %></td>
         
          <td><%= link_to 'Show', rating, class: "btn btn-light btn-sm ml-2" %></td>
          <td><%= link_to 'Edit', edit_rating_path(rating), class: "btn btn-light btn-sm ml-2" %></td>
          <td><%= link_to 'Destroy', rating, class: "btn btn-light btn-sm ml-2", method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Rating', new_rating_path, class: "btn btn-light btn-sm ml-2" %>
</div>
