<p id="notice"><%= notice %></p>

<h1>User Specialties</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Specialty</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_specialties.each do |user_specialty| %>
      <tr>
        <td><%= user_specialty.user_id %></td>
        <td><%= user_specialty.specialty_id %></td>
        <td><%= link_to 'Show', user_specialty %></td>
        <td><%= link_to 'Edit', edit_user_specialty_path(user_specialty) %></td>
        <td><%= link_to 'Destroy', user_specialty, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

