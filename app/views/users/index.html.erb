<p id="notice"><%= notice %></p>
<div class="centered">
  <h1>Users</h1>

  <table class="table">
    <thead>
      <tr>
        <th>Nombre</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.username %></td>
          <td><%= link_to 'Edit', edit_user_path(user), class: "btn btn-light" %></td>
          <td><%= link_to 'Destroy', user, method: :delete, class: "btn btn-light", data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to 'New Specialty', new_user_path, class: "btn btn-light" %>
</div>
